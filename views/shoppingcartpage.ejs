    <div class="container" id="wrape1">
        <nav class="navbar navbar-light">
            <div class="container-fluid">
              <a class="navbar-brand" href="#">AwsomeShop | View Cart</a>
              <div style="display: flex;">
                <a href="http://localhost:3000" style="margin-right: 3px;">Home</a>
                |
                <form id="myformLogout" action="http://localhost:3000/logout" method="POST">
                  <a href="javascript:;" onclick="document.getElementById('myformLogout').submit()" style="margin-left: 3px;">Logout</a>
                </form>
